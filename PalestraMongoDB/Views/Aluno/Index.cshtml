@model IEnumerable<PalestraMongoDB.Model.Aluno.AlunoModel>

<h1>Alunos</h1>

<a href="/Aluno/Edit/">Novo Aluno</a>

<table class="table" style="table-layout: fixed;">
    <thead>
        <tr>
            <th style="width: 86%">Nome</th>
            <th style="width: 10%">E-mail</th>
            <th style="width: 4%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>
					<a href="/Aluno/Edit/@aluno.Id">
						@aluno.Nome
					</a>
				</td>
                <td>@aluno.Email</td>
                <td>
					<p>
			        	<a href="/Aluno/Delete/@aluno.Id">
			          		<span class="glyphicon glyphicon-remove"></span>
			        	</a>
			      	</p>
                </td>
            </tr>
        }
    </tbody>
</table>