@model IEnumerable<PalestraMongoDB.Model.Disciplina.DisciplinaModel>

<h1>Disciplinas</h1>

<a href="/Disciplina/Edit/">Nova disciplina</a>

<table class="table" style="table-layout: fixed;">
    <thead>
        <tr>
            <th style="width: 86%">Nome</th>
            <th style="width: 10%">Duração</th>
            <th style="width: 4%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disciplina in Model)
        {
            <tr>
                <td>
					<a href="/Disciplina/Edit/@disciplina.Id">
						@disciplina.Nome
					</a>
				</td>
                <td>@disciplina.Duracao</td>
                <td>
					<p>
			        	<a href="/Disciplina/Delete/@disciplina.Id">
			          		<span class="glyphicon glyphicon-remove"></span>
			        	</a>
			      	</p>
                </td>
            </tr>
        }
    </tbody>
</table>